<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>



    <commentGenerator>
        <property name="suppressAllComments" value="true"/>
    </commentGenerator>

    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                    connectionURL="jdbc:mysql://${jdbc.url}/xhxreacon?zeroDateTimeBehavior=convertToNull&amp;useSSL=false&amp;useUnicode=true&amp;characterEncoding=UTF-8"
                    userId="${jdbc.username}"
                    password="${jdbc.password}">
    </jdbcConnection>

    <javaTypeResolver>
        <property name="forceBigDecimals" value="false"/>
    </javaTypeResolver>

    <!-- generate Model -->
    <javaModelGenerator targetPackage="${package.model}"
                        targetProject="${project.model}">
        <property name="enableSubPackages" value="true"/>
        <property name="trimStrings" value="true"/>
    </javaModelGenerator>

    <!-- generate xml -->
    <sqlMapGenerator targetPackage="${package.xml}"
                     targetProject="${project.xml}">
        <property name="enableSubPackages" value="true"/>
    </sqlMapGenerator>

    <!-- generate Mapper -->
    <javaClientGenerator type="XMLMAPPER" targetPackage="${package.mapper}"
                         targetProject="${project.mapper}">
        <property name="enableSubPackages" value="true"/>
    </javaClientGenerator>

    <table tableName="%">
        <generatedKey column="id" sqlStatement="Mysql"/>
    </table>

</generatorConfiguration>